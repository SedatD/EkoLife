<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButton_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageView_haber_detay_gorsel"
                android:layout_alignRight="@+id/imageView_haber_detay_gorsel"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_menu_share" />

            <ImageView
                android:id="@+id/imageView_haber_detay_gorsel"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_below="@+id/imageButton_share"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/textView_haber_detay_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView_haber_detay_gorsel"
                android:layout_alignStart="@+id/imageView_haber_detay_gorsel"
                android:layout_alignLeft="@+id/imageView_haber_detay_gorsel"
                android:layout_alignEnd="@+id/imageView_haber_detay_gorsel"
                android:layout_alignRight="@+id/imageView_haber_detay_gorsel"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorMainPurple"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_haber_detay_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_haber_detay_title"
                android:layout_alignStart="@+id/textView_haber_detay_title"
                android:layout_alignLeft="@+id/textView_haber_detay_title"
                android:layout_alignEnd="@+id/textView_haber_detay_title"
                android:layout_alignRight="@+id/textView_haber_detay_title"
                android:layout_marginTop="10dp"
                android:gravity="end" />

            <TextView
                android:id="@+id/textView_haber_detay_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_haber_detay_date"
                android:layout_alignStart="@+id/textView_haber_detay_date"
                android:layout_alignLeft="@+id/textView_haber_detay_date"
                android:layout_alignEnd="@+id/textView_haber_detay_date"
                android:layout_alignRight="@+id/textView_haber_detay_date"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
